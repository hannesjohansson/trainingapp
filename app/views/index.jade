extends layout

block body
  div(ng-controller='AppCtrl')
    ul
      li(ng-repeat='user in users') 
        span(ng-click='clickUser(user._id)') {{user.name}}
        button(ng-click='deleteUser($index)') Delete User
        button(ng-click='editUser(user.name, user.description, user._id)') Edit User
    h3 Userinfo
    p {{username}}
    p {{userinfo}}

    h3 Edit user
    input(ng-model='update.name', type='text', name="name", placeholder='Name')
    input(ng-model='update.description', type='text', name="description", placeholder='Description')
    button(ng-click='updateUser(user._id)', value="Update") Update

    h3 Create user
    input(ng-model='create.name', type='text', name="name", placeholder='Name')
    input(ng-model='create.description', type='text', name="description", placeholder='Description')
    button(ng-click='createUser()', value="Create") Create

  script(src='js/lib/angular/angular.js')
  script(src='js/app.js')
  script(src='js/services.js')
  script(src='js/controllers.js')
  script(src='js/filters.js')
  script(src='js/directives.js')


